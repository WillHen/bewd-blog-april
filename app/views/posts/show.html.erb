<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>
<section class="post__title">
   <h2> <%= @post.title %></h2>
    <p>By <%= link_to @post.author, root_path(author: @post.author.downcase) %></p>
   <p>
      <small>Posted <%= time_ago_in_words @post.created_at %> ago.</small>
    </p>
    
<!--    Add publication logic-->
<div class="actions">
    <%= link_to "home", root_path, class: "actions__link" %>
    <span>•</span>
    <%= link_to "edit", edit_post_path(@post) %>
    <span>•</span>
    <%= link_to "delete", post_path, method: :delete, confirm: true %>
</div>

<div>
<!--    Refactor in to helper-->
   <%= pull @post.pull_quote  %>
</div>
    </section>
<section class="post__body">
    <%= simple_format @post.body %>
    <h3>Comments</h3>
    <div class="post__comments">
<!--Loop over @comments-->
    <% @comments.each do |comment| %>
    <%= simple_format comment.body %>
    <p>Commented by <%=  comment.commenter_name %>  </p>  
    <% end %>
    </div>
</section>
